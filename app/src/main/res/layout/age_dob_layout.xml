<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingTop="@dimen/_12sdp"
    android:paddingBottom="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llDateOfBirth"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDateOfBirth"
                style="@style/Form_Label_Style"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/dateofbirth"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/etDateOfBirth"
                style="@style/Form_Input_Style_BG"
                android:layout_marginVertical="@dimen/_8sdp"
                android:hint="@string/dd_mm_yyyy"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_10sdp" />


        </LinearLayout>

        <View
            android:id="@+id/spaceView"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.04" />

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAge"
                style="@style/Form_Label_Style"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/age_in_years"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etAgeInYears"
                style="@style/Form_Input_Style_BG"
                android:layout_marginVertical="@dimen/_8sdp"
                android:hint="@string/enter_the_age"
                android:inputType="number"
                android:maxLength="3"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_10sdp" />

        </LinearLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/tvErrorMessage"
        style="@style/TextStyle_Error_14"
        android:visibility="gone" />

</LinearLayout>